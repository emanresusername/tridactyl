{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "build/tsc-out",
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES2017",
    "lib": ["ES2017","dom"],
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types/"],
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
